<div class="hero-unit">
  <p id="notice"><%= notice %></p>
  <div class = "page-header">
    <h1><strong>Lista de Alcances y Limitaciones</strong></h1>
  </div>
    <table class = "table table-bordered">
      <tr>
        <th>Nombre</th>
        <th>Descripcion</th>
        <th>Tipo</th>
        <th><center>Acciones</center></th>
      </tr>

    <% @alcance_limitaciones.each do |alcance_limitacione| %>
      <tr>
        <td><%= alcance_limitacione.nombre %></td>
        <td><%= alcance_limitacione.descripcion %></td>
        <td><%= alcance_limitacione.tipo %></td>
        <td><%= link_to 'Mostrar', show_gerente_alcance_limitacion_path(alcance_limitacione) %></td>
        <td><%= link_to 'Editar', edit_alcance_limitacione_path(alcance_limitacione) %></td>
        <td><%= link_to alcance_limitacione.estado == true ? 'Desaprobar' : 'Aprobar', estado_alcances_limitaciones_path(alcance_limitacione) %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%= link_to 'Nuevo Alcance o Limitacion', new_alcance_limitacione_path, { :class => "btn btn-inverse" } %>
</div>