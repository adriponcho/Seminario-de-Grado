<div class="hero-unit">
  <div class = "page-header">
    <h1><strong>Lista de Alcances y Limitaciones</strong></h1>
  </div>

<table class = "table table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Tipo</th>
    <th>Estado</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alcance_limitaciones.each do |alcance_limitacione| %>
  <tr>
    <td><%= alcance_limitacione.nombre %></td>
    <td><%= alcance_limitacione.descripcion %></td>
    <td><%= alcance_limitacione.tipo %></td>
    <td><%= alcance_limitacione.estado == true ? 'Aprobado' : 'Desaprobado' %></td>
    <td><%= link_to 'Mostrar', alcance_limitacione %></td>
    <td><%= link_to 'Editar', edit_alcance_limitacione_path(alcance_limitacione) %></td>
    <td><%= link_to 'Eliminar', alcance_limitacione, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nuevo Alcance o Limitacion', new_alcance_limitacione_path, { :class => "btn btn-inverse" } %>
    </div>
