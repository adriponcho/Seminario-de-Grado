<div class = "page-header">
<h1>Lista De Activos</h1>
</div>
<table class = "table table-bordered">
  <tr>
    <th>Nombre</th>
    <th>Descripcion</th>
    <th>Propietario</th>
    <th>Tipo</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @activos.each do |activo| %>
  <tr>
    <td><%= activo.nombre %></td>
    <td><%= activo.descripcion %></td>
    <td><%= activo.propietario %></td>
    <td><%= activo.tipo %></td>
    <td><%= link_to 'Mostrar', activo %></td>
    <td><%= link_to 'Editar', edit_activo_path(activo) %></td>
    <td><%= link_to 'Eliminar', activo, method: :delete, data: { confirm: 'Esta seguro de eliminar este activo?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Registrar Nuevo Activo', new_activo_path %>
